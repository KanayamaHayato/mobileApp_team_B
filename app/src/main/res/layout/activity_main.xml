<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="フォトの杜"
        android:textSize="36dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="りれき"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        app:layout_constraintStart_toStartOf="@id/history"
        />

    <ListView
        android:id="@+id/history"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:background="#FFFFFF"
        android:cacheColorHint="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="folder"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history"
        app:layout_constraintEnd_toStartOf="@id/buttonCamera"
        />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カメラ"
        app:layout_constraintTop_toTopOf="@id/buttonFolder"
        app:layout_constraintStart_toEndOf="@id/buttonFolder"
        app:layout_constraintEnd_toStartOf="@id/buttonSetting"
        />

    <Button
        android:id="@+id/buttonSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        app:layout_constraintTop_toTopOf="@id/buttonFolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonCamera"
        />


</androidx.constraintlayout.widget.ConstraintLayout>