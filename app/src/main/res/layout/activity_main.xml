<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gp_background"
    tools:context=".MainActivity">

    <!-- 上部背景（タイトル帯） -->
    <View
        android:id="@+id/topBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gp_title_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- タイトル -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*ふぉとの杜*"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@id/topBackground"
        app:layout_constraintBottom_toTopOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 検索 -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_margin="12dp"
        android:iconifiedByDefault="false"
        android:queryHint="検索"
        app:layout_constraintTop_toBottomOf="@id/topBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabLayout"/>

    <!-- タブ -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gp_title_background"
        app:tabTextColor="@color/tab_text_color"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="カテゴリ" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近使用した..." />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="その他" />
    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager（リスト表示エリア） -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ダークモード（bottomBarの上に配置） -->
    <!--
    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="ダークモード"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar" />
        -->

    <!-- 下のボタン置き場（ここに3つ全部入れる） -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aiTestButton"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:text="AI"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/gp_button"
            app:strokeColor="@color/gp_button_stroke"
            app:strokeWidth="2dp"
            app:cornerRadius="22dp"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCamera"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:text="Camera"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/gp_button"
            app:strokeColor="@color/gp_button_stroke"
            app:strokeWidth="2dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/camera"
            app:iconTint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/folderAddButton"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:text="+"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/gp_button"
            app:strokeColor="@color/gp_button_stroke"
            app:strokeWidth="2dp"
            app:cornerRadius="22dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
